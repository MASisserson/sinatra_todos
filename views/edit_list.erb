<% content_for :header_links do %>
  <a href="/lists" class="list">All Lists</a>
<% end %>

<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <form action="/lists/<%= @id %>/delete" method="post">
        <button type="submit" class="delete">Delete List</button>
      </form>
    </ul>
  </header>
</section>

<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input id="list_name" name="list_name" type="text" 
             value="<%= params[:list_name] || @list[:name] %>"
             autofocus="autofocus" />
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save" />
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>
